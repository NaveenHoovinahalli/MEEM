<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >
    <!--android:background="@color/meemBlack87"-->
    <TextView
        android:id="@+id/prompt_for_connect_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/waiting_for_cable_prompt_margin_top"
        android:gravity="center"
        android:text="connect MEEEEEEM"
        android:textColor="@color/meemWhite"/>

    <TextView
        android:id="@+id/lastBackupTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prompt_for_connect_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="lastBackup"
        android:textColor="@color/meemGray5"/>


    <LinearLayout
        android:id="@+id/wifiSearchLL"
        android:layout_below="@+id/lastBackupTime"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wifiIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wifii"/>

        <TextView
            android:padding="5dp"
            android:id="@+id/wifiSearchText"
            android:layout_gravity="center"
            android:textColor="@color/text_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Network"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/prompt_for_connect_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_connect_phone"/>
</RelativeLayout>