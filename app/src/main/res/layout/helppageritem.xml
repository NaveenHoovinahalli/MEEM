<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/helpWeb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.meem.ui.utils.MeemTextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <com.meem.ui.utils.MeemTextView
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/textOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please make sure you are using the latest version of the MEEM app"/>

            <com.meem.ui.utils.MeemTextView
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/textTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please make sure you are using the latest firmware in MEEM cable "/>

            <com.meem.ui.utils.MeemTextView
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/textThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you disconnected your cable from the device and charger and restarted your device? If not please do so."/>



            <com.meem.ui.utils.MeemTextView
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/textFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please fill in the following information where possible to give us the best chance of assisting you with any issues you might be having: "/>



            <com.meem.ui.utils.MeemTextView
                android:id="@+id/textFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"/>



            <com.meem.ui.utils.MeemTextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:id="@+id/textSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device info:Samsung , Android 8"/>
            <com.meem.ui.utils.MeemTextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:id="@+id/textSeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung , Android 8"/>

            <com.meem.ui.utils.MeemTextView
                android:id="@+id/textEight"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What issue are you facing with the MEEM app or cable?"/>



            <EditText
                android:background="@drawable/edittext_baground"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:id="@+id/etOne"
                android:gravity="top"
                android:minLines="5"
                android:textColorHint="@color/gray"
                android:hint=" write your comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <com.meem.ui.utils.MeemTextView
                android:id="@+id/tvButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rect_green"
                android:gravity="center"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/meemWhite"/>

        </LinearLayout>


    </ScrollView>
</LinearLayout>