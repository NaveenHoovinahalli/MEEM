<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/meemBlack83"
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.meem.ui.utils.MeemTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Desktop mode"
            android:textColor="@color/meemWhite"/>


        <com.meem.ui.utils.MeemTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/meem_mode_description"
            android:textColor="@color/meemGray4"/>


    </LinearLayout>

    <View style="@style/linewithmargin"/>



    <LinearLayout
        android:background="@color/meemBlack83"
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.meem.ui.utils.MeemTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Data cable mode"
            android:textColor="@color/meemWhite"/>


        <com.meem.ui.utils.MeemTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/data_cable_mode_description"
            android:textColor="@color/meemGray4"/>


    </LinearLayout>

    <View style="@style/linewithmargin"/>

</LinearLayout>